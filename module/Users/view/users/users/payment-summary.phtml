<script>
	function addPayment(){
		var user_type = $("#user_type").val();
		var firstname = $("#firstname").val();		
		var email = $("#email").val();
		var password = $("#password").val();
		var phone = $("#phone").val();
		var amount = $("#amount").val();
		var product_id = $("#product_id").val();
		var txnid = $("#txnid").val();
		$.ajax({
			type:'POST',
			url:  BASE_URL+'/users/add-user-payment',
			data:{user_type:user_type,user_first_name:firstname,phone:phone,email:email,password:password,amount:amount,product_id:product_id,txnid:txnid},
			success: function(data){
				if(data.output=='success'){
					$("#subFrm").submit();
				}
			}
		});
	}
</script>